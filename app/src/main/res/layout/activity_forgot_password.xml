<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="349dp"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="Email Address"
            android:id="@+id/emailResetPassword"
            android:inputType="textEmailAddress"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="60dp" android:layout_marginLeft="60dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="60dp">

    </EditText>
    <Button
            android:id="@+id/resetPassword_btn"
            android:layout_width="349dp"
            android:layout_height="61dp"
            android:backgroundTint="@color/grey"
            android:text="Reset Password"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/emailResetPassword"
            android:layout_marginTop="25dp">

    </Button>
    <ImageView
            android:layout_width="93dp"
            android:background="@drawable/round_blue"
            android:layout_height="85dp" app:srcCompat="@drawable/fridge" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="60dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>